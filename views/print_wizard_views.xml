<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Print Wizard Form View -->
        <record id="view_print_wizard_form" model="ir.ui.view">
            <field name="name">plc.print.wizard.form</field>
            <field name="model">plc.print.wizard</field>
            <field name="arch" type="xml">
                <form string="Print QR Code">
                    <header>
                        <button name="action_test_connection" string="Test Connection" type="object" class="btn-info"/>
                        <button name="action_preview" string="Preview" type="object" class="btn-secondary"/>
                        <button name="action_print" string="Print" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>Print QR Code Label</h1>
                        </div>
                        <group>
                            <group>
                                <field name="cycle_id" readonly="1"/>
                                <field name="cycle_number" readonly="1"/>
                                <field name="part_name" readonly="1"/>
                                <field name="barcode" readonly="1"/>
                            </group>
                            <group>
                                <field name="copies"/>
                                <field name="label_size"/>
                                <field name="custom_width" modifiers="{'invisible': [('label_size', '!=', 'custom')]}"/>
                                <field name="custom_height" modifiers="{'invisible': [('label_size', '!=', 'custom')]}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="printer_ip"/>
                                <field name="printer_port"/>
                            </group>
                        </group>
                        <group>
                            <field name="qr_data_preview" widget="text" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Print Wizard Preview View -->
        <record id="view_print_wizard_preview" model="ir.ui.view">
            <field name="name">plc.print.wizard.preview</field>
            <field name="model">plc.print.wizard</field>
            <field name="arch" type="xml">
                <form string="Label Preview">
                    <sheet>
                        <div class="oe_title">
                            <h1>Label Preview</h1>
                        </div>
                        <div class="text-center">
                            <div class="border p-4 d-inline-block">
                                <div class="mb-2">
                                    <strong>Cycle:</strong> <field name="cycle_number" readonly="1"/>
                                </div>
                                <div class="mb-2">
                                    <strong>Part:</strong> <field name="part_name" readonly="1"/>
                                </div>
                                <div class="mb-2">
                                    <strong>Barcode:</strong> <field name="barcode" readonly="1"/>
                                </div>
                                <div class="text-muted">
                                    <small>QR Code will be printed here</small>
                                </div>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Print Wizard Action -->
        <record id="action_plc_print_wizard" model="ir.actions.act_window">
            <field name="name">Print QR Code</field>
            <field name="res_model">plc.print.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        <!-- Scan Wizard Form View -->
        <record id="view_scan_wizard_form" model="ir.ui.view">
            <field name="name">plc.scan.wizard.form</field>
            <field name="model">plc.scan.wizard</field>
            <field name="arch" type="xml">
                <form string="Scan QR Code">
                    <header>
                        <button name="action_process_scan" string="Process Scan" type="object" class="btn-primary"/>
                        <button name="action_view_matched_cycle" string="View Cycle" type="object" class="btn-success" modifiers="{'invisible': [('match_status', '!=', 'matched')]}"/>
                        <button name="action_view_scan_log" string="View Log" type="object" class="btn-info"/>
                        <button name="action_clear_data" string="Clear" type="object" class="btn-secondary"/>
                        <field name="match_status" widget="statusbar" statusbar_visible="not_processed,matched,not_found,invalid_data,duplicate"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>QR Code Scanner</h1>
                        </div>
                        <group>
                            <group>
                                <field name="cycle_id" modifiers="{'invisible': [('cycle_id', '=', False)]}"/>
                                <field name="scanner_id"/>
                                <field name="workstation_id"/>
                            </group>
                            <group>
                                <field name="parsed_cycle_number" readonly="1"/>
                                <field name="parsed_part_name" readonly="1"/>
                                <field name="parsed_barcode" readonly="1"/>
                                <field name="parsed_datetime" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="scanned_data" widget="text" placeholder="Paste scanned QR code data here..."/>
                        </group>
                        <group>
                            <field name="matched_cycle_id" modifiers="{'invisible': [('match_status', '!=', 'matched')]}"/>
                            <field name="match_message" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Scan Wizard Action -->
        <record id="action_plc_scan_wizard" model="ir.actions.act_window">
            <field name="name">Scan QR Code</field>
            <field name="res_model">plc.scan.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
    </data>
</odoo>
