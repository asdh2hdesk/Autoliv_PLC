<odoo>
    <record id="view_autoline_part_list" model="ir.ui.view">
        <field name="name">autoline.part.list</field>
        <field name="model">autoline.part</field>
        <field name="arch" type="xml">
            <list>
                <header>
                    <button name="action_print_labels"
                            string="Print Labels"
                            type="object"
                            class="btn-primary"/>
                </header>
                <field name="part_no"/>
                <field name="revision"/>
                <field name="vendor_code"/>
                <field name="mfg_date"/>
                <field name="serial_no"/>
                <field name="part_desc"/>
            </list>
        </field>
    </record>

    <record id="view_autoline_part_form" model="ir.ui.view">
        <field name="name">autoline.part.form</field>
        <field name="model">autoline.part</field>
        <field name="arch" type="xml">
            <form string="Part Master">
                <sheet>
                    <group>
                        <field name="part_no"/>
                        <field name="revision"/>
                        <field name="vendor_code"/>
                        <field name="mfg_date"/>
                        <field name="serial_no"/>
                        <field name="part_desc"/>
                        <field name="company_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_autoline_part" model="ir.actions.act_window">
        <field name="name">Autoline Parts</field>
        <field name="res_model">autoline.part</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_autoline_part" parent="menu_plc_main" name="Parts" action="action_autoline_part"/>
</odoo>
