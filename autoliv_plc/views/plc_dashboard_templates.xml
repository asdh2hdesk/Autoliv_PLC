<?xml version="1.0" encoding="utf-8"?>
<template id="monitoring_dashboard" name="PLC Monitoring Dashboard">
    <div class="monitoring-dashboard">
        <div class="row">
            <div class="col-12">
                <h2>PLC Monitoring Dashboard</h2>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-success start-monitoring">
                        <i class="fa fa-play"></i>
                        Start Monitoring
                    </button>
                    <button type="button" class="btn btn-danger stop-monitoring">
                        <i class="fa fa-stop"></i>
                        Stop Monitoring
                    </button>
                    <button type="button" class="btn btn-info refresh-data">
                        <i class="fa fa-refresh"></i>
                        Refresh
                    </button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="plc-stats">
                    <div class="stat-card">
                        <div class="stat-number" t-esc="stats.today_total or 0"/>
                        <div>Today's Records</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number text-success" t-esc="stats.today_verified or 0"/>
                        <div>Verified</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number text-danger" t-esc="stats.today_failed or 0"/>
                        <div>Failed</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number text-info" t-esc="stats.success_rate"/>%
                    </div>
                    <div>Success Rate</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h4>Recent Records</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Time</th>
                        <th>Part Number</th>
                        <th>Barcode</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="records" t-as="record">
                        <tr>
                            <td t-esc="record.create_date"/>
                            <td t-esc="record.part_number"/>
                            <td t-esc="record.barcode"/>
                            <td>
                                <span t-attf-class="badge badge-#{record.state == 'verified' and 'success' or (record.state == 'failed' and 'danger' or 'warning')}"
                                      t-esc="record.state"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </div>
</template>